<div class="container">
    <div class="row">
        <!-- Logo -->
        <div id="logo" class="col4">
            <a href="/">
                <img src="/img/logo.png" alt="מעגלי שיח מבית שיתופים" title="מעגלי שיח מבית שיתופים"/>

            </a>
            <a href="http://www.sheatufim.org.il" target="_blank">
                <img src="/img/shitufim.png" alt="מעגלי שיח מבית שיתופים" title="מעגלי שיח מבית שיתופים"/>
            </a>
        </div>
        <!-- Navigation -->
        <nav id="header-nav" class="col6">
            <ul class="menu inline-list">
                <li><a href="/about">אודות</a></li>
                <li style="display:none"><a href="/information_items">מאגרי מידע</a></li>
                <li><a href="#">צור קשר</a></li>
                <% if( user_logged ) { %>
                    <li id="header-nav-logged-in">
                        <div  class="row">
                            <div class="right">
                                <img src="<%=avatar%>" class="logged-in-user-img circle" alt="<%=user.first_name%>"/>
                            </div>
                            <div class="right logged-in-user-details">
                                <div class="logged-in-user-welcome">שלום,</div>
                                <div class="logged-in-user-name"><%=user.first_name%></div>
                                <div class="logged-in-user-logout"><a href="/account/logout">יציאה</a></div>
                            </div>
                        </div>
                    </li>
                <% } else { %>
                    <li id="header-nav-login">
                        <button class="btn btn-large btn-green btn-nav-login"><i class="icon icon-small-pad-left icon-size2 icon-login"></i>התחברות</button>
                        <div class="login-bubble hide" style="top: 67px; left: 87px;">
                            <div class="zirot-login">
                                <i class="icon icon-login-bubble-tip right"></i>
                                <form>
                                    <div>
                                        <label for="inputUsername">שם משתמש:</label>
                                    </div>
                                    <div>
                                        <input name="username" id="inputUsername" class="zirot-login-username" type="text" tabindex="1" required="">
                                    </div>
                                    <div>
                                        <label for="inputPassword">סיסמא:</label>
                                    </div>
                                    <div>
                                        <input name="password" id="inputPassword" class="zirot-login-password" type="password" tabindex="2" required="">
                                    </div>
                                    <div>
                                        <div class="zirot-login-actions">
                                            <div class="spacer-login"><button type="submit" tabindex="3" class="btn btn-medium btn-blue btn-submit login_form_btn">התחברות</button></div>
                                            <div class="zirot-login-forgot-password"><a href="#">שכחתי סיסמא</a></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        $('.btn-nav-login').bind('click', function (e) {

            e.stopPropagation();

            $bubble = $('.login-bubble');
            $bubble.removeClass('hide');
            $('.login-bubble input[type="text"]:first-of-type').focus();
            $bubble.css({
                'top': $(this).position().top + $(this).outerHeight() + $('.login-bubble .icon-login-bubble-tip').height(),
                'left': $(this).position().left - (($bubble.outerWidth() - $(this).outerWidth()) / 2)
            });

        });
    });

    var mail = "<%= (user && user.email) || '' %>";
</script>