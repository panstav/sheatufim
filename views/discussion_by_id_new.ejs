<script type="text/javascript">
    $(document).ready(function () {
        var is_logged = <%= user_logged %>;
        var discussion = <%- JSON.stringify(discussion || "") %>;
        var user = <%- JSON.stringify(user || "") %>;
        var page_posts, post_groups, count;

        if(is_logged){
